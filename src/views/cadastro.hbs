<script>
  function mensagem() {
    let x = document.getElementById("mensagem");
    x.style.display = '';
    setTimeout(function () { x.style.display = 'none'; }, 7000);
  
  }
</script>


<div class="col-md-7 container">
  <form class="needs-validation" action="/biblioteca/adicionar" method="post">
    <div class="row">
      <div class="col-md-6 mb-3">
        <label for="titulo">Titulo</label>
        <input type="text" class="form-control" id="titulo" placeholder="Titulo da obra" name="titulo" required>
      </div>
      <div class="col-md-6 mb-3">
        <label for="autor">Autor</label>
        <input type="text" class="form-control" id="for" placeholder="Autor" name="autor" required>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 mb-3">
        <label for="lancamento">Ano de lançamento</label>
        <input type="number" class="form-control" id="" placeholder="Ano de lançamento" name="ano_lancamento" required>
      </div>
      <div class="col-md-6 mb-3">
        <label for="genero">Gênero(s)</label>
        <input type="text" class="form-control" id="genero" placeholder="Gênero(s)" name="genero" required>
      </div>

    </div>

    <div class="form-group mb-3">

      <label for="descricao">Descrição(s)</label>
      <div class="input-group">
        <textarea class="form-control" rows="6" name="descricao"></textarea required>
      </div>
    </div>

    <div class="form-group mb-3">

      <div class="form-group">
        <label for="categoria">Categoria</label>
        <select class="form-control" id="categoria" name="categoria" required>
          <option>----</option>
          <option>Mangá</option>
          <option>Novel</option>
          <option>Webcomic</option>
          <option>Manhwa</option>
        </select>
      </div>

    </div>

    <div class="row">
      <div class="col-md-6 mb-3">
        <label for="artista">Artista(s)</label>
        <input type="text" class="form-control" id="artista" placeholder="Artista(s)" name="artista" required>
      </div>
      <div class="col-md-6 mb-3">
        <div class="form-group">
          <label for="status">Status</label>
          <select class="form-control" id="status" name="status" required>
            <option>----</option>
            <option>Em lançamento</option>
            <option>Finalizado</option>
            <option>Abandonado</option>
            <option>Em hiato</option>
          </select>
        </div>
      </div>


      <button type="submit" onclick="mensagem()" style="margin-top: 15px; font-size: large;"
        class="btn btn-primary btn-lg btn-block">Adicionar</button>

    </div>

  </form>

  <div style="display: none;" id="mensagem" class="mb-5 alert alert-success text-center" role="alert">
    Adicionado com sucesso.
  </div>

</div>




</div>