{{#unless error}}
<div class="container">
  <div class="col-md-7 py-4 container">
    <form class="needs-validation" action="/biblioteca/atualizar" method="post">
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="titulo">Titulo</label>

          <input type="hidden" value="{{id}}" name="id">

          <input type="text" class="form-control" id="titulo" value="{{item.titulo}}" placeholder="Titulo da obra" name="titulo">
        </div>
        <div class="col-md-6 mb-3">
          <label for="autor">Autor</label>
          <input type="text" class="form-control" id="for" placeholder="Autor" value="{{item.autor}}" name="autor">
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="lancamento">Ano de lançamento</label>
          <input type="number" class="form-control" id="lancamento" value="{{item.lancamento}}" placeholder="Ano de lançamento" name="ano_lancamento">
        </div>
        <div class="col-md-6 mb-3">
          <label for="genero">Gênero(s)</label>
          <input type="text" class="form-control" id="genero" value="{{item.genero}}" placeholder="Gênero(s)" name="genero">
        </div>

      </div>

      <div class="form-group mb-3">

        <label for="descricao">Descrição(s)</label>
        <div class="input-group">
          <input  value="{{item.descricao}}" class="form-control" name="descricao" ></input>
        </div>
      </div>

      <div class="form-group mb-3">

        <div class="form-group">
          <label for="categoria">Categoria</label>
          <input class="form-control" id="categoria" value="{{item.categoria}}" name="categoria">
          </input>
        </div>

      </div>


      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="artista">Artista(s)</label>
          <input type="text" class="form-control" value="{{item.artista}}" id="artista" placeholder="Artista(s)" name="artista">
        </div>
        <div class="col-md-6 mb-3">
          <div class="form-group">
            <label for="status">Status</label>
            <input class="form-control" id="status"  value="{{item.status}}" name="status">
            </input>
          </div>
        </div>

      <div class="mt-3 row  p-0 ">
          <div class="col p-0 ms-4 me-5">
            <a href="/biblioteca/{{item.categoria}}" class=" w-100 btn btn-secondary btn-lg btn-block"> Voltar</a>
          </div>

     <div class="col p-0 ms-5">
        <button type="submit"  class=" w-100 btn btn-warning btn-lg btn-block">Salvar alterações</button>
          </div>
      </div>

      </div>

    </form>
  </div>



