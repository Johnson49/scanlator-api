{{#unless error}}
<div class="container">
  <div class="col-md-7 py-4 container">
    <form class="needs-validation" action="/biblioteca/atualizar" method="post">
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="titulo">Titulo</label>

          <input type="hidden" value="{{id}}" name="id">

          <input type="text" class="form-control" id="titulo" value="{{item.titulo}}" placeholder="Titulo da obra" name="titulo">
        </div>
        <div class="col-md-6 mb-3">
          <label for="autor">Autor</label>
          <input type="text" class="form-control" id="for" placeholder="Autor" value="{{item.autor}}" name="autor">
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="lancamento">Ano de lançamento</label>
          <input type="number" class="form-control" id="lancamento" value="{{item.lancamento}}" placeholder="Ano de lançamento" name="ano_lancamento">
        </div>
        <div class="col-md-6 mb-3">
          <label for="genero">Gênero(s)</label>
          <input type="text" class="form-control" id="genero" value="{{item.genero}}" placeholder="Gênero(s)" name="genero">
        </div>

      </div>

      <div class="form-group mb-3">

        <label for="descricao">Descrição(s)</label>
        <div class="input-group">
          <textarea  value class="form-control" rows="6" name="descricao" ></textarea>
        </div>
      </div>

      <div class="form-group mb-3">

        <div class="form-group">
          <label for="categoria">Categoria</label>
          <select class="form-control" id="categoria" value="{{item.categoria}}" name="categoria">
            <option>----</option>
            <option>manga</option>
            <option>Novel</option>
            <option>Webcomic</option>
            <option>Manhwa</option>
          </select>
        </div>

      </div>


      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="artista">Artista(s)</label>
          <input type="text" class="form-control" value="{{item.artista}}" id="artista" placeholder="Artista(s)" name="artista">
        </div>
        <div class="col-md-6 mb-3">
          <div class="form-group">
            <label for="status">Status</label>
            <select class="form-control" id="status"  value="{{item.status}}" name="status">
              <option>----</option>
              <option>Em lançamento</option>
              <option>Finalizado</option>
              <option>Abandonado</option>
              <option>Em hiato</option>
            </select>
          </div>
        </div>


        <button type="submit" style="margin-top: 15px; font-size: large;"
          class="btn btn-warning btn-lg btn-block">Salvar alterações</button>

      </div>

    </form>
  </div>



